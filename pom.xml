            <version>${mysql.connector.version}</version>
        </dependency>


        <!-- ORACLE JDBC driver -->

        <dependency>
            <groupId>com.oracle</groupId>
            <artifactId>ojdbc14</artifactId>
            <version>10.2.0.5.0</version>
        </dependency>

